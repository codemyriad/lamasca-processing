<View>
    <View
    style="display:flex;align-items:start;gap:8px;flex-direction:row-reverse"
  >

        <!-- Image view with options -->
        <Image name="image" value="$ocr" zoom="true" zoomControl="true" />

        <!-- Labels to mark different sections on the image -->
        <Labels name="label" toName="image" showInline="false">
        <Label value="Text" background="green" />
        <Label value="Title" background="#FF3370" />
        <Label value="SubTitle" background="#FFA39E" />
        <Label value="Author" background="#22BBFF" />
        <Label value="Ad" background="#dc8add" />
        <Label value="PageNumber" background="#cCF910" />
        <Label value="Date" background="#FFCC00" />
        <Label value="PageTitle" background="#cF9910" />
        </Labels>

    </View>

    <!-- Tools for defining regions -->
    <Rectangle name="bbox" toName="image" strokeWidth="3" />

    <!-- Defining relationships between regions -->
    <Relations name="relations" toName="label">
        <Relation value="Flow" />
        <Relation value="Title of" />
    </Relations>

    <!-- Text area for transcription and metadata capture -->
    <TextArea
    name="text"
    toName="image"
    editable="true"
    perRegion="true"
    required="false"
    maxSubmissions="1"
    rows="5"
    placeholder="Recognized Text"
    displayMode="region-list"
  />

    <!-- Fields for page metadata input -->
    <Header value="Page Information" />
    <Text
    name="page_number"
    value="$pageNumber"
    placeholder="Enter page number here"
    label="Page Number"
  />
    <Text
    name="date"
    value="$date"
    placeholder="Enter date here"
    label="Date"
  />

    </View>
